<h2>{{#str}}weeklydebates, local_mindscape_feed{{/str}}</h2>
{{#debates}}
    <div class="card mb-3">
        <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <div class="card-text">{{{description}}}</div>
        </div>
        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <small>{{weekstart}}</small>
            {{#kialourl}}
                <a class="btn btn-primary btn-sm" href="{{.}}">{{#str}}participatedebate, local_mindscape_feed{{/str}}</a>
            {{/kialourl}}
            {{#posturl}}
                <a class="btn btn-secondary btn-sm" href="{{.}}">{{#str}}viewdiscussion, local_mindscape_feed{{/str}}</a>
            {{/posturl}}
        </div>
    </div>
{{/debates}}
{{^debates}}
    <div class="alert alert-info">{{#str}}nodebates, local_mindscape_feed{{/str}}</div>
{{/debates}}
